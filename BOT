<script>
  const toggle = document.getElementById("jee-bot-toggle");
  const panel = document.getElementById("jee-bot-panel");
  const messages = document.getElementById("jee-bot-messages");
  const input = document.querySelector("#jee-bot-input input");
  const sendBtn = document.querySelector("#jee-bot-input button");
  const quickReplies = document.querySelectorAll(".quick-reply");

  function addMsg(text, from="bot"){
      const el = document.createElement("div");
      el.className = `msg ${from}`;
      el.innerText = text;
      messages.appendChild(el);
      messages.scrollTop = messages.scrollHeight;
  }

  async function askBot(question){
      addMsg(question, "user");
      const typingIndicator = document.createElement("div");
      typingIndicator.className = "msg bot";
      typingIndicator.id = "typing-indicator";
      typingIndicator.innerHTML = "ðŸ’¬ Typing...";
      messages.appendChild(typingIndicator);
      messages.scrollTop = messages.scrollHeight;
      await new Promise(resolve => setTimeout(resolve, 700 + Math.random() * 1000));
      document.getElementById("typing-indicator")?.remove();
      const response = generateResponse(question);
      addMsg(response);
  }

  function generateResponse(question) {
      question = question.toLowerCase();

      if (question.includes('hello') || question.includes('hi')) {
          return "ðŸ‘‹ Hi there! Iâ€™m **JEE Assistant**, your guide for exploring colleges, predictions, and comparisons. What do you want to do first â€” Predict, Compare, or Explore Universities?";
      }

      if (question.includes('show') || question.includes('guide') || question.includes('around')) {
          return "ðŸš€ Letâ€™s get you started:\n\nðŸŽ¯ **Predictor** â†’ Find possible colleges based on your JEE rank.\nâš–ï¸ **Compare** â†’ Compare colleges side by side (placement, fees, ranking).\nðŸ›ï¸ **Universities** â†’ Explore top colleges with full details.\n\nWhich one would you like to explore?";
      }

      if (question.includes('predictor') || question.includes('predict')) {
          return "ðŸŽ¯ In **Predictor Mode**, just enter your JEE rank, category, and state quota. The system will suggest the most likely colleges for you!";
      }

      if (question.includes('compare')) {
          return "âš–ï¸ **Compare Mode** helps you see two or more colleges side by side â€” placements, fees, cutoff ranks, and NIRF ranking. Type *â€˜Compare IIT Delhi and NIT Trichyâ€™* to try it!";
      }

      if (question.includes('universities') || question.includes('university')) {
          return "ðŸ›ï¸ Explore universities and NITs/IITs with detailed data â€” cutoff trends, hostel, facilities, placements, and more. Try asking: *â€˜Tell me about IIT Bombayâ€™* or *â€˜Show NITs in Maharashtraâ€™*.";
      }

      if (question.includes('iit delhi')) {
          return "ðŸŽ“ **IIT Delhi** â€“ Among Indiaâ€™s top 3 IITs. Strong in CSE, EE, and Mechanical. Avg CSE package ~â‚¹25 LPA. Superb campus and research culture!";
      }

      if (question.includes('nit trichy')) {
          return "ðŸ« **NIT Trichy** â€“ Top-ranked NIT with 90%+ placement. Avg package â‚¹10â€“12 LPA. Famous for Civil, CSE, and Mechanical branches.";
      }

      if (question.includes('help') || question.includes('tips')) {
          return "ðŸ’¡ You can try:\nâ€¢ â€˜Predictorâ€™ â€“ Check possible colleges\nâ€¢ â€˜Compareâ€™ â€“ Compare colleges easily\nâ€¢ â€˜Universitiesâ€™ â€“ Explore all universities\nâ€¢ Or directly ask: *â€˜Show me IIT Delhi cutoffâ€™*";
      }

      return "ðŸ¤” Hmm, I didnâ€™t quite get that. Try asking about *Predictor*, *Compare*, or *Universities*, or type a college name like *IIT Bombay* or *BITS Pilani*.";
  }

  toggle.onclick = () => panel.style.display = panel.style.display === "flex" ? "none" : "flex";
  sendBtn.onclick = () => { if(input.value.trim()) { askBot(input.value); input.value=""; } };
  input.onkeydown = (e) => { if(e.key === "Enter" && input.value.trim()) { askBot(input.value); input.value=""; } };
  quickReplies.forEach(reply => {
      reply.addEventListener('click', () => {
          askBot(reply.getAttribute('data-reply'));
      });
  });

  // Initial Greeting
  addMsg("ðŸŒ™ Hi! I'm **JEE College Assistant**. I can help you predict colleges, compare options, or explore universities. What would you like to start with?");
</script>
